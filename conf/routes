# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                  controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                      controllers.Assets.at(path="/public", file)

GET           /admin                             controllers.Application.admin()

GET           /home                              controllers.Application.home()

GET           /mastersstudents/                  controllers.MastersStudents.list(pape: Integer ?= 0, sortBy ?= "id", order ?= "asc", filter ?= "")
GET           /mastersstudents/new               controllers.MastersStudents.newMastersStudent()
POST          /mastersstudents/                  controllers.MastersStudents.save()
GET           /mastersstudents/edit/:code        controllers.MastersStudents.details(code: models.MastersStudent)
DELETE        /mastersstudents/:code             controllers.MastersStudents.delete(code: String)
GET           /mastersstudents/user/:code        controllers.MastersStudents.info(code: models.MastersStudent)

GET           /facultys/                         controllers.Facultys.list(pape: Integer ?= 0, sortBy ?= "id", order ?= "asc", filter ?= "")
GET           /facultys/new                      controllers.Facultys.newFaculty()
POST          /facultys/                         controllers.Facultys.save()
GET           /facultys/edit/:code               controllers.Facultys.details(code: models.Faculty)
DELETE        /facultys/:code                    controllers.Facultys.delete(code: String)
GET           /facultys/user/:code               controllers.Facultys.info(code: models.Faculty)

GET           /logout                            controllers.Application.logout()
POST          /authenticate                      controllers.Application.authenticate()
GET           /listaccount                       controllers.Application.listAccount()