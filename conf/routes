# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file               controllers.Assets.at(path="/public", file)

GET           /mastersstudent/            controllers.MastersStudents.list(page: Integer ?= 0)
GET           /mastersstudent/new         controllers.MastersStudents.newMastersStudent()
GET           /mastersstudent/:ean        controllers.MastersStudents.details(ean: models.MastersStudent)
POST          /mastersstudent/            controllers.MastersStudents.save()
DELETE        /mastersstudent/:ean        controllers.MastersStudents.delete(ean: String)
GET           /stockitems/                controllers.StockItems.index()
GET           /login                      controllers.Application.login()
GET           /logout                     controllers.Application.logout()
POST          /authenticate               controllers.Application.authenticate()